=link_to "exit", exit_path, :class => "exit", :remote => true

:javascript
	VideoJS.setupAllWhenReady();
.video-js-box
	%video{ :class => "video-js", :width => "840", :height => "473", :controls => true, :preload => true, :autoplay => true, :poster => "#{@video.thumb(:poster)}" }
		%source{ :src => "#{@video.video.url}", :type => 'video/mp4; codecs="avc1.42E01E, mp4a.40.2"' }/
		%source{ :src => "#{@video.ogg.url}", :type => 'video/ogg; codecs="theora, vorbis"' }/
		%object{ :id => "flash_fallback_1", :class => "vjs-flash-fallback", :width => "840", :height => "473", :type => "application/x-shockwave-flash", :data => "http://releases.flowplayer.org/swf/flowplayer-3.2.1.swf" }
			%param{ :name => "movie", :value => "http://releases.flowplayer.org/swf/flowplayer-3.2.1.swf"}/
			%param{ :name => "allowfullscreen", :value => "true" }/
			<param name="flashvars" value='config={"playlist":["#{@video.thumb(:poster)}", {"url": "#{@video.video.url}","autoPlay":false,"autoBuffering":true}]}' />
			<img src="#{@video.thumb(:poster)}" width="640" height="264" alt="Poster Image" title="No video playback capabilities." />

%p{ :style => "float:left;" }=@video.client
%p.controls
	=link_to "next", video_play_path(@next), :remote => true
	=link_to "previous", video_play_path(@previous), :remote => true, :style => "margin-right: 25px;"
.clear